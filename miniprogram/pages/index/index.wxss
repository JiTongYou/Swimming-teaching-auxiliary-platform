/* 广场内容 */
.indexSquareItem{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #cfd6d8;
}

.indexSquareItem .user{
  display: flex;
}

.indexSquareItem .user .avatar{
  height: 80rpx;
  width: 80rpx;
  border-radius: 5rpx;
}

.indexSquareItem .user .name{
  padding-left: 20rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.indexSquareItem .content{
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.indexSquareItem .time{
  font-size: 30rpx;
  color: #9ca1a1;
  line-height: 30rpx;
}

/* 聊天内容 */
.indexChatItem{
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #cfd6d8;
}

.indexChatItem .userAvatar{
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin:25rpx;
}

.indexChatItem .userName{
  line-height: 70rpx;
  text-align: center;
  height: 70rpx;
  font-size: 35rpx;
}

.indexChatItem .time{
  float: right;
  line-height: 75rpx;
  text-align: center;
  height: 75rpx;
  font-size: 30rpx;
  color: #cfd6d8;
}

.indexChatItem .detail{
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #9ca1a1;
}

