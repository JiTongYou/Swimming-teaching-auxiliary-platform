/* 广场和信息 */
.indexNav{
  background-color: #f7fafd;
  height: 80rpx;
  width: 100%;
}

.indexNav .navItem{
  display: flex;
}

.indexNav .navItem .navContent{
  height: 80rpx;
  line-height: 80rpx;
  width: 50%;
  text-align: center;
  box-sizing: border-box;
}

.navItem .active{
  border-bottom: 5rpx solid #c4ebf7;
}

