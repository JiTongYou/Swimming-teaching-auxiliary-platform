/* 班级通知 */
.indexNoticeContainer{
  padding: 7rpx 5rpx 18rpx;
  background-color: #f7fafd;
}

.indexNoticeContainer .header{
  display: flex;
  justify-content: space-between;
}

.indexNoticeContainer .header .class{
  font-size: 35rpx;
  font-weight: 500;
  padding: 0 0 6rpx 10rpx;
}

.indexNoticeContainer .header .time{
  font-size: 30rpx;
  padding: 3rpx 10rpx
}

.indexNoticeContainer .content{
  font-size: 30rpx;
  padding: 0 10rpx 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.indexNoticeContainer .detailButton{
  position: relative;
  text-align: center;
  font-size: 25rpx;
  height: 43rpx;
  padding: 5rpx;
  left: 250rpx;
  background-color: #c4ebf7;
}

/* 上次观看 */
.indexWatchingRecord{
  font-size: 33rpx;
  margin: 10rpx;
}

.indexWatchingRecord .recordItem{
  width:100%;
  display: flex;
  flex-direction: row;
}

.indexWatchingRecord view{
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
}

.indexWatchingRecord .videoCover{
  height: 180rpx;
  width: 90%;
}

.indexWatchingRecord .videoName{
  display: block;
  text-align: left;
  font-size: 26rpx;
  font-weight: 800;
}

