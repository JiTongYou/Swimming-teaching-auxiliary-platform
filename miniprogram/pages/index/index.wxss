/* 班级通知 */
.indexNoticeContainer{
  padding: 7rpx 5rpx 18rpx;
  background-color: #f7fafd;
}

.indexNoticeContainer .header{
  display: flex;
  justify-content: space-between;
}

.indexNoticeContainer .header .class{
  font-size: 35rpx;
  font-weight: 500;
  padding: 0 0 6rpx 10rpx;
}

.indexNoticeContainer .header .time{
  font-size: 30rpx;
  padding: 3rpx 10rpx
}

.indexNoticeContainer .content{
  font-size: 30rpx;
  padding: 0 10rpx;
}

.indexNoticeContainer .detailButton{
  position: relative;
  text-align: center;
  font-size: 25rpx;
  height: 43rpx;
  padding: 5rpx;
  left: 250rpx;
  background-color: #c4ebf7;
}

/* 上次观看 */
.indexWatchingRecord{
  padding: 10rpx;
  font-size: 33rpx;
}

.indexWatchingRecord .videoCover{
  display: flex;
  width: 320rpx;
  height: 180rpx;
}

.indexWatchingRecord .videoName{
  display: block;
  width: 40%;
  text-align: left;
  font-size: 30rpx;
  font-weight: 800;
}

