<view class="formContainer">
  <button class="submit" catchtap="clickPublish" style="width:140rpx">发布</button>
  <view class="noticeHeadContainer">
    <textarea class="head" placeholder="请输入公告标题（非必须）" 
  maxlength="100" bindinput="bindNoticeHead"></textarea>
  </view> 
  <view class="contentContainer">
    <textarea class="content" placeholder="请输入公告内容（必须）" 
  maxlength="300" bindinput="countWord"></textarea>
  </view> 
  <view class="noticeContainer">
    <text class="notice">公告内容最多输入300字</text>
    <text class="counter">{{wordNum}}/300</text>
  </view>
  
</view>
