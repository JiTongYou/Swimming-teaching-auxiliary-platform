/* miniprogram/pages/teaching class/teaching class.wxss */

.classContainer{
  height: 100%
}

/* 单个课程条 */
.classItem{
  padding: 30rpx;
  border-bottom: 1rpx solid #cfd6d8;
}

.classItem .classDetail{
  display: flex;
}

.classItem .className{
  font-size: 40rpx;
  padding-bottom: 30rpx;
}

.classItem .teacherName{
  font-size: 32rpx;
}

.classItem  .classEnterance{
  position: absolute;
  text-align: center;
  font-size: 25rpx;
  height: 43rpx;
  padding: 5rpx;
  right: 40rpx;
  background-color: #c4ebf7;
}

/* 加入新班级 */
.joinNewClass{
  position: relative;
  text-align: center;
  font-size: 30rpx;
  height: 50rpx;
  padding: 5rpx;
  align-items: center;
  background-color: #c4ebf7;
  margin: 40rpx;
}

/* 加入新班级弹窗 */
.popupContainer{
  width: 80%;
  height: 24%;
  position: absolute; 
  left: 10vw;
  top: 35vh;
  background-color: #f7fdff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.popupContainer .popupHeader{
  width: 100%;
  text-align: center;
  padding: 10rpx;
  font-size: 40rpx;
}

.popupContainer .classNum{
  width: 90%;
  padding:20rpx;
}

.popupContainer .button{
  display: flex;
}

.popupContainer .button button{
  background-color: #f7fdff;
}