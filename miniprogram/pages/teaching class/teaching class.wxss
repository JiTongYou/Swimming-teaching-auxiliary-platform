.singleClassNoticeContainer{
  padding: 7rpx 5rpx 18rpx;
  border-bottom: 1rpx solid #cfd6d8;
}

.singleClassNoticeContainer .gonggao{
  padding: 0 10rpx;
}

.singleClassNoticeContainer .header{
  display: flex;
  justify-content: space-between;
}

.singleClassNoticeContainer .header .class{
  font-size: 35rpx;
  font-weight: 500;
  padding: 0 0 6rpx 10rpx;
}

.singleClassNoticeContainer .header .time{
  font-size: 30rpx;
  padding: 3rpx 10rpx
}

.singleClassNoticeContainer .content{
  font-size: 30rpx;
  padding: 0 10rpx;
}

.singleClassItem{
  line-height: 80rpx;
  border-bottom: 1rpx solid #cfd6d8;
}

.singleClassItem .iconfont{
  height: 60rpx;
  margin: 10rpx
}

.singleClassItem text{
  font-size: 36rpx;
}

.publishNotice{
  position: relative;
  text-align: center;
  font-size: 25rpx;
  height: 43rpx;
  padding: 5rpx;
  left: 250rpx;
  background-color: #c4ebf7;
}

.dismissClass{
  display: block;
  text-align: center;
  font-size: 35rpx;
  height: 60rpx;
  padding: 5rpx;
  margin-top: 5vh;
  background-color: #fc4f4f;
}

/* 加入/创建新班级弹窗（部分样式共用） */
.popupContainer{
  width: 80%;
  height: 14%;
  position: absolute; 
  left: 10vw;
  top: 38vh;
  background-color: #f7fdff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.popupContainer .popupHeader{
  width: 100%;
  text-align: center;
  padding: 10rpx;
  font-size: 40rpx;
}

.popupContainer .classNum{
  width: 90%;
  padding:20rpx;
}

.popupContainer .className{
  width: 90%;
  padding:20rpx;
}

.popupContainer .button{
  display: flex;
}

.popupContainer .button button{
  background-color: #f7fdff;
}