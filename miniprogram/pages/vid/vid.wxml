   </scroll-view>

</view>


<!-- 训练计划 -->
<scroll-view bindrefresherrefresh="handleRefresher"

                refresher-triggered="{{isTriggered}}"
                bindscrolltolower="handleToLower"
                scroll-y 
                class="scrollTraining" 
                enable-flex
                wx:if="{{navId==1}}" 
                scroll-with-animation="true">
<!--每个训练计划-->
<view class="Training">
      <view class="trainingItem"
            wx:key="training"
            wx:for="{{trainingList}}"
            wx:if="{{toCategory==1}}">

      <image class="common"  
             data-training='{{item}}'
             bindtap="toTraining"
             src="{{item.cover}}"> </image>

      <view class="title">            
            {{item.title}}</view>
      </view>
</view>
</scroll-view>

