<!--pages/vid/vid.wxml-->
<view class="vid" >
<!--导航栏-->
   <view class="navigation" enable-flex>
      <view class="navigationColumn {{navId== '0' ?'active':''}}" id="0" wx:key="id" bindtap="changeNav" enable-back-to-top="true">教学视频 </view>
      <view class="navigationColumn {{navId== '1' ?'active':''}}" id="1" wx:key="id"  bindtap="changeNav" enable-back-to-top="true">训练计划 </view>
     <!-- <view class="categoryBar" bindtap="getCategory">CAT</view> -->
   </view> 

<!--视频-->
<scroll-view bindrefresherrefresh="onPullDownRefresh"
             scroll-y 
             bindscrolltolower="onReachBottom"
             class="scrollvid"  
             wx:if="{{navId==0}}" 
             scroll-with-animation="true">

<!--每个视频本体-->
<view class="vid">
      <view class="vidItem"
            wx:key="vid"
            wx:for="{{vidList}}"
            wx:if="{{toCategory==1}}">

      <image class="common"  
             data-vid='{{item}}'
             bindtap="tovid"
             src="{{item.cover}}"> </image>

      <view class="title">            
            {{item.title}}</view>
      </view>
</view>


       <!-- 分类的视频
